<launch>
    <!-- Parameters for the serial port and baud rate -->
    <param name="serial_port" type="string" value="/dev/ttyACM0" />
    <param name="baud_rate" type="int" value="9600" />

    <!-- Node to send Twist messages serially-->
    <node name="sensor_node" type="sensor.py" pkg="rov_visualize" output="screen">
        <param name="serial_port" value="/dev/ttyACM0" />
        <param name="baud_rate" value="9600" />
    </node> 

    <!-- launch rviz with the urdf model -->
    <arg name="model" default="$(find rov_visualize)/urdf/rov.urdf" />

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rov_visualize)/rviz/rov_visualize.rviz" />

</launch>
